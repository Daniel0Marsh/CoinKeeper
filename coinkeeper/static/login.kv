<LoginScreen>:

    BoxLayout:
        orientation: 'vertical'
        spacing: '15dp'
        padding: '15dp'
        pos_hint: {'center_x': 0.5, 'center_y': 0.65}

        MDCard:
            size_hint: None, None
            size: "300dp", "300dp"
            elevation: 2
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            md_bg_color: app.theme_cls.bg_dark if app.theme_cls.theme_style == 'Dark' else app.theme_cls.bg_light

            BoxLayout:
                orientation: 'vertical'
                spacing: '15dp'
                padding: '15dp'

                MDLabel:
                    text: 'CoinKeeper'
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.primary_color  # Set the text color to the primary color
                    font_style: 'H4'

                MDTextField:
                    id: username
                    hint_text: 'Username'
                    size_hint: None, None
                    size: "250dp", "30dp"

                MDTextField:
                    id: password
                    hint_text: 'Password'
                    password: True
                    size_hint: None, None
                    size: "250dp", "30dp"


                MDRectangleFlatButton:
                    text: 'Login'
                    on_release: root.login()
                    size_hint: None, None
                    size: "200dp", "40dp"
                    pos_hint: {'center_x': 0.5}


        MDCard:
            size_hint: None, None
            size: self.minimum_size
            elevation: 2
            spacing: '15dp'
            padding: '15dp'
            pos_hint: {'center_x': 0.5}
            md_bg_color: app.theme_cls.bg_dark if app.theme_cls.theme_style == 'Dark' else app.theme_cls.bg_light

            MDRectangleFlatButton:
                text: 'Create Account'
                on_release: app.change_screen("create_account")

            MDRectangleFlatButton:
                text: 'Forgotten Password'
                on_release: root.forgotten_password()
